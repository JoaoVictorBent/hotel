<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="hotel.interface_grafica.contratacaoHospedagem"
             Title="contratacaoHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Gray100}">
    
    <VerticalStackLayout VerticalOptions="CenterAndExpand" Padding="10">

        <Label Text="Calculo da diária" FontFamily="Kalam-Regular" FontSize="50" TextColor="{StaticResource Primary}"/>

        <Border Stroke="{StaticResource Primary}" StrokeThickness="1" Padding="10" BackgroundColor="Transparent">

            <VerticalStackLayout>

                <Grid RowDefinitions="Auto, Auto" ColumnDefinitions="*, *, 2*">

                    <Label Grid.Row="0" Grid.Column="0" Text="Adultos"/>

                    <Label Grid.Row="0" Grid.Column="1" Text="{Binding Value}" BindingContext="{x:Reference stp_adultos}" TextColor="{StaticResource Primary}"/>

                    <Stepper Grid.Row="0" Grid.Column="2" x:Name="stp_adultos" Maximum="10" Minimum="0" Increment="1"/>

                    <Label Grid.Row="1" Grid.Column="0" Text="Criancas"/>

                    <Label Grid.Row="1" Grid.Column="1" Text="{Binding Value}" BindingContext="{x:Reference stp_criancas}" TextColor="{StaticResource Primary}"/>

                    <Stepper Grid.Row="1" Grid.Column="2" x:Name="stp_criancas" Maximum="10" Minimum="0" Increment="1"/>

                </Grid>

                <Label Text="Escolha sua Suite"/>

                <Picker x:Name="pck_quarto" Title="Selecione sua Acomodação" ItemDisplayBinding="{Binding Descricao}"/>

                <Border Stroke="{StaticResource Primary}" StrokeThickness="1" Padding="10" Margin="10" BackgroundColor="Transparent">

                    <VerticalStackLayout>

                        <Label Text="Período da estadia"/>

                        <HorizontalStackLayout>

                            <Label Text="Check-in"/>

                            <DatePicker x:Name="dtpck_checkin" Format="dd/MM/yyyy" DateSelected="dtpck_checkin_DateSelected"/>

                        </HorizontalStackLayout>

                        <HorizontalStackLayout>

                            <Label Text="Check-out"/>

                            <DatePicker x:Name="dtpck_checkout" Format="dd/MM/yyyy"/>

                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                    
                </Border>

                <Button Text="Avançar" Clicked="Button_Clicked"/>

            </VerticalStackLayout>

        </Border>

    </VerticalStackLayout>
</ContentPage>